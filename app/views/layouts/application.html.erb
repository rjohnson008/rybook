<!DOCTYPE html>
<html>
	<head>
	  <title>Rybook</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<!-- Iterates over flash object. type = :notice, :alert, etc. & msg = actual message you want to display -->
			<% flash.each do |type, msg| %>
				<!-- flash_class is a global helper method you added to the ApplicationHelper (application_helper.rb)-->
				<div class="alert <%= flash_class(type) %>">
					<button class="close" data-dismiss="alert">&times;</button>
					<%= msg %>
				</div>
			<% end %>

			<%= render 'layouts/header' %>
				<%= yield %>
			<%= render 'layouts/footer' %>
			
		</div>

	</body>
</html>
