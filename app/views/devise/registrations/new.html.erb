<div class="fluid-row">
  <div class="span5">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal well' }) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend><h2>Sign Up</h2></legend>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :profile_name %>
          <%= f.input :email, autofocus: true %>
          <%= f.input :password %>
          <legend><%= f.input :password_confirmation %></legend>
          
          <%= f.submit "Let's do this!", class: "btn btn-large btn-success btn-block" %>
      </fieldset>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>  




