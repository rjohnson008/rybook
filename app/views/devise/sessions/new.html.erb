<div class="fluid-row">
	<div class="span5">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal well" }) do |f| %>

			<fieldset>
				<legend><h2>Sign in</h2></legend>

				<%= f.input :email %>
				<%= f.input :password %>
				<legend>
				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.input :remember_me, as: :boolean %></div>
				  <% end -%>
				 </legend>

        	<%= f.submit "I'm back bitches!", class: "btn btn-large btn-success btn-block pull-right" %>
		  </fieldset>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>

	<div class="span6">
		<h2>Signing in is easy and secure</h2>
	</div>
</div>


